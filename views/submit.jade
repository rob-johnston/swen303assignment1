extends ../node_modules/jade-bootstrap/_bootstrap

doctype html
html
    head
        title= title
        link(rel='stylesheet', href='stylesheets/style.css')

    block body
        link(rel='stylesheet', href='stylesheets/style.css')
        +navbar("Colenso Project", "dropdown_menu")
            +nav_item("/") Home
            +nav_item("/searchpage","active") Documents
        + img-responsive-center("images/logo.jpg","Responsive Image")
        .container
            h1 #{title}
            .container
            p Welcome to #{title}. Home of historical documents.

            +nav-tabs-justified([{text:"Search",href:"/searchpage"},{text:"Submit",href:"/submit"},{text:"Edit",href:"/edit"}],1)
            br
            br
            br
            h1 Historical Document Submission
            p  Here you can enter the XML for a new document and add it to our database!

            div.searchPlace
                div.infotext
                    p #{message}
                form(id = 'submitbox', name ='submit', action='/submit', method='POST')
                    +input("text","text", "Enter file name here", "Filename", value = "name") !{contentname}
                    +submit("Submit New XML File")
                    br
                    textarea(id = 'myTextArea', name = 'text', style= "min-width:300px; height:400px; width:100%", value="myContent", form = 'submitbox') !{content}


        div.bottom
            link(rel='stylesheet', href='stylesheets/style2.css')
            .col-md-3
                ul#listings
                    li this is
                    li stuff that
                    li i want to
                    li write
            .col-md-3


            .col-md-3
                p some more text
